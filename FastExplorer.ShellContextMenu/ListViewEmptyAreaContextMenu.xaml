<ContextMenu
    x:Class="FastExplorer.ShellContextMenu.ListViewEmptyAreaContextMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    MinWidth="200"
    Padding="4"
    BorderThickness="1">
    <ContextMenu.Template>
        <ControlTemplate TargetType="ContextMenu">
            <Border
                x:Name="BackgroundBorder"
                Margin="4"
                Padding="{TemplateBinding Padding}"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="8"
                SnapsToDevicePixels="True">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="18"
                        Opacity="0.8"
                        ShadowDepth="0"
                        Color="#40000000" />
                </Border.Effect>
                <ScrollViewer
                    CanContentScroll="True"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Cycle" />
                </ScrollViewer>
            </Border>
        </ControlTemplate>
    </ContextMenu.Template>

    <!--  レイアウト（サブメニュー）  -->
    <ui:MenuItem
        x:Name="LayoutMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <ui:SymbolIcon
                    x:Name="LayoutIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="Grid24" />
                <TextBlock
                    x:Name="LayoutText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="レイアウト" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!--  並べ替え（サブメニュー）  -->
    <ui:MenuItem
        x:Name="SortMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <ui:SymbolIcon
                    x:Name="SortIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="ArrowSort24" />
                <TextBlock
                    x:Name="SortText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="並べ替え" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!--  グループで表示（サブメニュー）  -->
    <ui:MenuItem
        x:Name="GroupMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <ui:SymbolIcon
                    x:Name="GroupIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="GroupList24" />
                <TextBlock
                    x:Name="GroupText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="グループで表示" />
            </StackPanel>
        </ui:MenuItem.Header>
        <ui:MenuItem Header="なし" />
        <ui:MenuItem Header="名前" />
        <ui:MenuItem Header="種類" />
        <ui:MenuItem Header="変更日時" />
    </ui:MenuItem>

    <!--  最新の情報に更新  -->
    <ui:MenuItem
        x:Name="RefreshMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon
                    x:Name="RefreshIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="ArrowClockwise24" />
                <TextBlock
                    x:Name="RefreshText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="最新の情報に更新" />
                <TextBlock
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="Gray"
                    Text="Ctrl+R" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <Separator />

    <!--  新規作成（サブメニュー）  -->
    <ui:MenuItem
        x:Name="NewMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <ui:SymbolIcon
                    x:Name="NewIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="AddCircle24" />
                <TextBlock
                    x:Name="NewText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="新規作成" />
            </StackPanel>
        </ui:MenuItem.Header>
        <ui:MenuItem x:Name="NewFolderMenuItem" Header="フォルダー" />
        <ui:MenuItem x:Name="NewTextDocumentMenuItem" Header="テキスト ドキュメント" />
        <ui:MenuItem x:Name="NewShortcutMenuItem" Header="ショートカット" />
    </ui:MenuItem>

    <!--  ショートカットを貼り付け  -->
    <ui:MenuItem
        x:Name="PasteShortcutMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon
                    x:Name="PasteShortcutIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="Document24" />
                <TextBlock
                    x:Name="PasteShortcutText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="ショートカットを貼り付け" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!--  サイドバーにピン留めする  -->
    <ui:MenuItem
        x:Name="PinToSidebarMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon
                    x:Name="PinToSidebarIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="Star24" />
                <TextBlock
                    x:Name="PinToSidebarText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="サイドバーにピン留めする" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!--  スタートメニューにピン留めする  -->
    <ui:MenuItem
        x:Name="PinToStartMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon
                    x:Name="PinToStartIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="Star24" />
                <TextBlock
                    x:Name="PinToStartText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="スタートメニューにピン留めする" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <Separator />

    <!--  ターミナルで開く  -->
    <ui:MenuItem
        x:Name="OpenTerminalMenuItem"
        MinHeight="32"
        Padding="-8,6,8,6">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon
                    x:Name="OpenTerminalIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="Window24" />
                <TextBlock
                    x:Name="OpenTerminalText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="ターミナルで開く" />
                <TextBlock
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="Gray"
                    Text="Ctrl+@" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!--  読み込み中...（サブメニュー）- 通常は非表示、必要に応じて表示  -->
    <ui:MenuItem x:Name="LoadingMenuItem" Visibility="Collapsed">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon
                    x:Name="LoadingIcon"
                    Width="16"
                    Height="16"
                    Margin="-8,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="MoreHorizontal24" />
                <TextBlock
                    x:Name="LoadingText"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="読み込み中..." />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>
</ContextMenu>

