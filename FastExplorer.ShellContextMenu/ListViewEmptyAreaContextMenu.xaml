<ContextMenu x:Class="FastExplorer.ShellContextMenu.ListViewEmptyAreaContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             BorderThickness="1"
             Padding="4"
             MinWidth="200">
    <ContextMenu.Template>
        <ControlTemplate TargetType="ContextMenu">
            <Border x:Name="BackgroundBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8"
                    Padding="{TemplateBinding Padding}"
                    SnapsToDevicePixels="True"
                    Margin="4">
                <Border.Effect>
                    <DropShadowEffect Color="#40000000"
                                      BlurRadius="18"
                                      ShadowDepth="0"
                                      Opacity="0.8" />
                </Border.Effect>
                <ScrollViewer CanContentScroll="True"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Cycle" />
                </ScrollViewer>
            </Border>
        </ControlTemplate>
    </ContextMenu.Template>

    <!-- レイアウト（サブメニュー） -->
    <ui:MenuItem x:Name="LayoutMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Grid24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="LayoutIcon" />
                <TextBlock x:Name="LayoutText"
                           Text="レイアウト"
                           VerticalAlignment="Center"
                           FontSize="14" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!-- 並べ替え（サブメニュー） -->
    <ui:MenuItem x:Name="SortMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon x:Name="SortIcon"
                               Symbol="ArrowSort24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center" />
                <TextBlock x:Name="SortText"
                           Text="並べ替え"
                           VerticalAlignment="Center"
                           FontSize="14" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!-- グループで表示（サブメニュー） -->
    <ui:MenuItem x:Name="GroupMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="GroupList24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="GroupIcon" />
                <TextBlock x:Name="GroupText"
                           Text="グループで表示"
                           VerticalAlignment="Center"
                           FontSize="14" />
            </StackPanel>
        </ui:MenuItem.Header>
        <ui:MenuItem Header="なし" />
        <ui:MenuItem Header="名前" />
        <ui:MenuItem Header="種類" />
        <ui:MenuItem Header="変更日時" />
    </ui:MenuItem>

    <!-- 最新の情報に更新 -->
    <ui:MenuItem x:Name="RefreshMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="ArrowClockwise24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="RefreshIcon" />
                <TextBlock x:Name="RefreshText"
                           Text="最新の情報に更新"
                           VerticalAlignment="Center"
                           FontSize="14" />
                <TextBlock Text="Ctrl+R"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           Foreground="Gray"
                           FontSize="12" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <Separator />

    <!-- 新規作成（サブメニュー） -->
    <ui:MenuItem x:Name="NewMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="AddCircle24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="NewIcon" />
                <TextBlock x:Name="NewText"
                           Text="新規作成"
                           VerticalAlignment="Center"
                           FontSize="14" />
            </StackPanel>
        </ui:MenuItem.Header>
        <ui:MenuItem Header="フォルダー" />
        <ui:MenuItem Header="ショートカット" />
        <ui:MenuItem Header="テキスト ドキュメント" />
    </ui:MenuItem>

    <!-- ショートカットを貼り付け -->
    <ui:MenuItem x:Name="PasteShortcutMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Document24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="PasteShortcutIcon" />
                <TextBlock x:Name="PasteShortcutText"
                           Text="ショートカットを貼り付け"
                           VerticalAlignment="Center"
                           FontSize="14" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!-- サイドバーにピン留めする -->
    <ui:MenuItem x:Name="PinToSidebarMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Star24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="PinToSidebarIcon" />
                <TextBlock x:Name="PinToSidebarText"
                           Text="サイドバーにピン留めする"
                           VerticalAlignment="Center"
                           FontSize="14" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!-- スタートメニューにピン留めする -->
    <ui:MenuItem x:Name="PinToStartMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Star24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="PinToStartIcon" />
                <TextBlock x:Name="PinToStartText"
                           Text="スタートメニューにピン留めする"
                           VerticalAlignment="Center"
                           FontSize="14" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <Separator />

    <!-- ターミナルで開く -->
    <ui:MenuItem x:Name="OpenTerminalMenuItem"
                 Padding="-8,6,8,6"
                 MinHeight="32">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="Window24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="OpenTerminalIcon" />
                <TextBlock x:Name="OpenTerminalText"
                           Text="ターミナルで開く"
                           VerticalAlignment="Center"
                           FontSize="14" />
                <TextBlock Text="Ctrl+@"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           Foreground="Gray"
                           FontSize="12" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>

    <!-- 読み込み中...（サブメニュー）- 通常は非表示、必要に応じて表示 -->
    <ui:MenuItem x:Name="LoadingMenuItem"
                 Visibility="Collapsed">
        <ui:MenuItem.Header>
            <StackPanel Orientation="Horizontal">
                <ui:SymbolIcon Symbol="MoreHorizontal24"
                               Width="16"
                               Height="16"
                               Margin="-8,0,12,0"
                               VerticalAlignment="Center"
                               x:Name="LoadingIcon" />
                <TextBlock x:Name="LoadingText"
                           Text="読み込み中..."
                           VerticalAlignment="Center"
                           FontSize="14" />
            </StackPanel>
        </ui:MenuItem.Header>
    </ui:MenuItem>
</ContextMenu>

