<UserControl
    x:Class="FastExplorer.Views.Pages.SettingsPage.AboutSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:FastExplorer.Helpers"
    xmlns:local="clr-namespace:FastExplorer.Views.Pages.SettingsPage"
    xmlns:localization="clr-namespace:FastExplorer.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:AboutSettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24,24,24,0">
            <TextBlock
                FontSize="20"
                FontWeight="Medium"
                Text="{localization:LocalizationHelperExtension AboutApplication}" />
            <TextBlock
                Margin="0,24,0,0"
                FontSize="14"
                Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
            <TextBlock
                Margin="0,12,0,0"
                FontSize="12"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{localization:LocalizationHelperExtension ApplicationDescription}"
                TextWrapping="Wrap" />
        </StackPanel>
    </ScrollViewer>
</UserControl>

