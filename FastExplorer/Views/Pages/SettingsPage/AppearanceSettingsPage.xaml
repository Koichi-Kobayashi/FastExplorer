<UserControl
    x:Class="FastExplorer.Views.Pages.SettingsPage.AppearanceSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:FastExplorer.Helpers"
    xmlns:local="clr-namespace:FastExplorer.Views.Pages.SettingsPage"
    xmlns:localization="clr-namespace:FastExplorer.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance local:AppearanceSettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <helpers:ThemeColorSelectionConverter x:Key="ThemeColorSelectionConverter" />
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24,24,24,0">
            <TextBlock
                FontSize="20"
                FontWeight="Medium"
                Text="{localization:LocalizationHelperExtension Appearance}" />

            <!--  テーマ  -->
            <TextBlock
                Margin="0,24,0,8"
                FontSize="16"
                FontWeight="Medium"
                Text="{localization:LocalizationHelperExtension Theme}" />
            <RadioButton
                Margin="0,8,0,0"
                Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                CommandParameter="theme_light"
                Content="{localization:LocalizationHelperExtension Light}"
                GroupName="themeSelect"
                IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
            <RadioButton
                Margin="0,8,0,0"
                Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                CommandParameter="theme_dark"
                Content="{localization:LocalizationHelperExtension Dark}"
                GroupName="themeSelect"
                IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />

            <!--  テーマカラー  -->
            <TextBlock
                Margin="0,24,0,8"
                FontSize="16"
                FontWeight="Medium"
                Text="{localization:LocalizationHelperExtension ThemeColor}" />
            <TextBlock
                Margin="0,0,0,8"
                FontSize="12"
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                Text="{localization:LocalizationHelperExtension ThemeColorDescription}" />
            <ItemsControl
                x:Name="ThemeColorsItemsControl"
                Margin="0,8,0,0"
                ItemsSource="{Binding ViewModel.ThemeColors, Mode=OneWay}"
                Loaded="ThemeColorsItemsControl_Loaded">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button
                            Width="40"
                            Height="40"
                            Margin="4"
                            Padding="0"
                            Command="{Binding DataContext.ViewModel.SelectThemeColorCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Cursor="Hand"
                            Tag="{Binding}"
                            ToolTip="{Binding Name}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{Binding Color}"
                                        BorderBrush="{DynamicResource TextFillColorSecondaryBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderThickness" Value="2" />
                                                        <Setter Property="BorderBrush" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                                        <Setter Property="Background" Value="Transparent" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <ContentPresenter
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding Content}"
                                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--  背景画像  -->
            <Expander
                Margin="0,24,0,0"
                Header="{localization:LocalizationHelperExtension BackgroundImage}"
                IsExpanded="False">
                <StackPanel Margin="0,12,0,0">
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            IsReadOnly="True"
                            Text="{Binding ViewModel.BackgroundImagePath, Mode=OneWay}"
                            ToolTip="{Binding ViewModel.BackgroundImagePath, Mode=OneWay}" />
                        <Button
                            Grid.Column="1"
                            Margin="0,0,4,0"
                            Command="{Binding ViewModel.BrowseBackgroundImageCommand, Mode=OneWay}"
                            Content="{localization:LocalizationHelperExtension Browse}" />
                        <Button
                            Grid.Column="2"
                            Margin="0,0,4,0"
                            Command="{Binding ViewModel.ClearBackgroundImageCommand, Mode=OneWay}"
                            Content="×"
                            ToolTip="{localization:LocalizationHelperExtension ClearBackgroundImage}" />
                    </Grid>

                    <TextBlock Margin="0,16,0,8" Text="{localization:LocalizationHelperExtension Opacity}" />
                    <Slider
                        Margin="0,0,0,0"
                        IsMoveToPointEnabled="True"
                        Maximum="1.0"
                        Minimum="0.0"
                        TickFrequency="0.1"
                        Value="{Binding ViewModel.BackgroundImageOpacity, Mode=TwoWay}" />

                    <TextBlock Margin="0,16,0,8" Text="{localization:LocalizationHelperExtension Stretch}" />
                    <ComboBox
                        Margin="0,0,0,0"
                        SelectedValue="{Binding ViewModel.BackgroundImageStretchString, Mode=TwoWay}"
                        SelectedValuePath="Tag">
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension FitToWindowSize}" Tag="FitToWindow" />
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension FillWindow}" Tag="Fill" />
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension TileRepeat}" Tag="Tile" />
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension OriginalSize}" Tag="None" />
                    </ComboBox>

                    <TextBlock Margin="0,16,0,8" Text="{localization:LocalizationHelperExtension VerticalAlignment}" />
                    <ComboBox
                        Margin="0,0,0,0"
                        SelectedValue="{Binding ViewModel.BackgroundImageVerticalAlignmentString, Mode=TwoWay}"
                        SelectedValuePath="Tag">
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension Top}" Tag="Start" />
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension Center}" Tag="Center" />
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension Bottom}" Tag="End" />
                    </ComboBox>

                    <TextBlock Margin="0,16,0,8" Text="{localization:LocalizationHelperExtension HorizontalAlignment}" />
                    <ComboBox
                        Margin="0,0,0,0"
                        SelectedValue="{Binding ViewModel.BackgroundImageHorizontalAlignmentString, Mode=TwoWay}"
                        SelectedValuePath="Tag">
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension Left}" Tag="Start" />
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension Center}" Tag="Center" />
                        <ComboBoxItem Content="{localization:LocalizationHelperExtension Right}" Tag="End" />
                    </ComboBox>
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>

