<Page
    x:Class="FastExplorer.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:FastExplorer.Helpers"
    xmlns:localization="clr-namespace:FastExplorer.Helpers"
    xmlns:local="clr-namespace:FastExplorer.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:FastExplorer.Models"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <StackPanel Margin="24,24,24,0">
        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="{localization:LocalizationHelperExtension General}" />
        <TextBlock Margin="0,12,0,0" Text="右クリックメニュー" />
        <CheckBox
            Margin="0,8,0,0"
            Content="FastExplorerの右クリックメニューを使用する"
            IsChecked="{Binding ViewModel.UseFastExplorerContextMenu, Mode=TwoWay}" />
        <TextBlock
            Margin="0,8,0,0"
            FontSize="12"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="チェックを外すと、OS標準の右クリックメニューが表示されます。" />

        <TextBlock Margin="0,24,0,0" Text="{localization:LocalizationHelperExtension Language}" />
        <ComboBox
            Margin="0,8,0,0"
            DisplayMemberPath="Name"
            ItemsSource="{Binding ViewModel.AvailableLanguages, Mode=OneWay}"
            SelectedItem="{Binding ViewModel.SelectedLanguage, Mode=TwoWay}"
            SelectedValuePath="Code" />

        <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="Personalization" />
        <TextBlock Margin="0,12,0,0" Text="Theme" />
        <RadioButton
            Margin="0,12,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_light"
            Content="Light"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
        <RadioButton
            Margin="0,8,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_dark"
            Content="Dark"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />

        <TextBlock Margin="0,24,0,12" Text="Theme Color" />
        <ItemsControl ItemsSource="{Binding ViewModel.ThemeColors, Mode=OneWay}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="10" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button
                        Width="40"
                        Height="40"
                        Margin="4"
                        Padding="0"
                        Command="{Binding DataContext.ViewModel.SelectThemeColorCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                        CommandParameter="{Binding}"
                        Cursor="Hand"
                        ToolTip="{Binding Name}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    Background="{Binding Color}"
                                    BorderBrush="{DynamicResource TextFillColorSecondaryBrush}"
                                    BorderThickness="1"
                                    CornerRadius="4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="BorderThickness" Value="2" />
                                                    <Setter Property="BorderBrush" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Margin="0,24,0,12" Text="背景画像" />
        <Grid Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Column="0"
                Margin="0,0,8,0"
                IsReadOnly="True"
                Text="{Binding ViewModel.BackgroundImagePath, Mode=OneWay}"
                ToolTip="{Binding ViewModel.BackgroundImagePath, Mode=OneWay}" />
            <Button
                Grid.Column="1"
                Margin="0,0,4,0"
                Command="{Binding ViewModel.BrowseBackgroundImageCommand, Mode=OneWay}"
                Content="参照" />
            <Button
                Grid.Column="2"
                Margin="0,0,4,0"
                Command="{Binding ViewModel.ClearBackgroundImageCommand, Mode=OneWay}"
                Content="×"
                ToolTip="背景画像をクリア" />
        </Grid>

        <TextBlock Margin="0,16,0,8" Text="不透明度" />
        <Slider
            Margin="0,0,0,0"
            Maximum="1.0"
            Minimum="0.0"
            TickFrequency="0.1"
            Value="{Binding ViewModel.BackgroundImageOpacity, Mode=TwoWay}" />

        <TextBlock Margin="0,16,0,8" Text="画像の調整" />
        <ComboBox
            Margin="0,0,0,0"
            SelectedValue="{Binding ViewModel.BackgroundImageStretchString, Mode=TwoWay}"
            SelectedValuePath="Tag">
            <ComboBoxItem Content="ウィンドウのサイズに合わせる" Tag="FitToWindow" />
            <ComboBoxItem Content="ウィンドウを埋める" Tag="Fill" />
            <ComboBoxItem Content="タイル状に繰り返す" Tag="Tile" />
            <ComboBoxItem Content="元のサイズで表示" Tag="None" />
        </ComboBox>

        <TextBlock Margin="0,16,0,8" Text="垂直方向の配置" />
        <ComboBox
            Margin="0,0,0,0"
            SelectedValue="{Binding ViewModel.BackgroundImageVerticalAlignmentString, Mode=TwoWay}"
            SelectedValuePath="Tag">
            <ComboBoxItem Content="上" Tag="Start" />
            <ComboBoxItem Content="中央" Tag="Center" />
            <ComboBoxItem Content="下" Tag="End" />
        </ComboBox>

        <TextBlock Margin="0,16,0,8" Text="水平方向の配置" />
        <ComboBox
            Margin="0,0,0,0"
            SelectedValue="{Binding ViewModel.BackgroundImageHorizontalAlignmentString, Mode=TwoWay}"
            SelectedValuePath="Tag">
            <ComboBoxItem Content="左" Tag="Start" />
            <ComboBoxItem Content="中央" Tag="Center" />
            <ComboBoxItem Content="右" Tag="End" />
        </ComboBox>

        <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="Explorer" />
        <CheckBox
            Margin="0,12,0,0"
            Content="分割ペインを有効にする（WinSCPスタイル）"
            IsChecked="{Binding ViewModel.IsSplitPaneEnabled, Mode=TwoWay}" />
        <TextBlock
            Margin="0,8,0,0"
            FontSize="12"
            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
            Text="有効にすると、左右2つのペインでそれぞれタブを表示できます。アプリケーションを再起動すると反映されます。" />

        <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="About FastExplorer" />
        <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
    </StackPanel>
</Page>
