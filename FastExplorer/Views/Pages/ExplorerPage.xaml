                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!--  ドライブ  -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock
                                        Margin="0,0,0,12"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="ドライブ" />
                                    <ItemsControl ItemsSource="{Binding ViewModel.Drives, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:DriveInfoModel}">
                                                <Border
                                                    Margin="0,0,0,8"
                                                    Padding="12"
                                                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="4"
                                                    Cursor="Hand"
                                                    MouseLeftButtonDown="Drive_MouseLeftButtonDown">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                                                    <Setter Property="BorderThickness" Value="2" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            FontFamily="Segoe Fluent Icons"
                                                            FontSize="32"
                                                            Width="32"
                                                            Height="32"
                                                            Margin="0,0,10,0"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Center"
                                                            Foreground="{DynamicResource IconBrush}"
                                                            Text="&#xEDA2;" />
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock FontWeight="SemiBold" Text="{Binding Name, Mode=OneWay}" />
                                                            <TextBlock
                                                                FontSize="12"
                                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                Text="{Binding Path, Mode=OneWay}" />
                                                            <ProgressBar
                                                                Height="4"
                                                                Margin="0,4,0,0"
                                                                Maximum="1"
                                                                Value="{Binding UsagePercentage, Mode=OneWay}" />
                                                            <TextBlock FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                                                <Run Text="空き領域 " />
                                                                <Run Text="{Binding FormattedFreeSpace, Mode=OneWay}" />
                                                                <Run Text="/" />
                                                                <Run Text="{Binding FormattedTotalSize, Mode=OneWay}" />
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!--  ネットワークの場所  -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock
                                        Margin="0,0,0,12"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="ネットワークの場所" />
                                    <Border
                                        Padding="12"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <TextBlock
                                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                            Text="ネットワークの場所がありません。ネットワークの場所を使用しない場合は、ウィジェットを無効にすることができます。"
                                            TextWrapping="Wrap" />
                                    </Border>
                                </StackPanel>

                                <!--  最近使用したファイル  -->
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,12"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="最近使用したファイル" />
                                    <ItemsControl ItemsSource="{Binding ViewModel.RecentFilesList, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:FileSystemItem}">
                                                <Border
                                                    Margin="0,0,0,4"
                                                    Padding="8,6"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                    Cursor="Hand"
                                                    MouseLeftButtonDown="RecentFile_MouseLeftButtonDown">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                                                    <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                                                    <Setter Property="BorderThickness" Value="1" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <ui:SymbolIcon
                                                            Grid.Column="0"
                                                            Width="20"
                                                            Height="20"
                                                            Margin="0,0,12,0"
                                                            VerticalAlignment="Center"
                                                            Symbol="{Binding IsDirectory, Converter={StaticResource DirectoryIconConverter}, Mode=OneWay}" />
                                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Name, Mode=OneWay}" />
                                                            <TextBlock
                                                                FontSize="11"
                                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                Text="{Binding FullPath, Mode=OneWay}"
                                                                TextTrimming="CharacterEllipsis" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!--  ファイルリスト  -->
                        <ListView
                            x:Name="FileListView"
                            Grid.Row="2"
                            Background="Transparent"
                            Focusable="True"
                            ItemsSource="{Binding ViewModel.Items, Mode=OneWay}"
                            KeyDown="ListView_KeyDown"
                            MouseDoubleClick="ListView_MouseDoubleClick"
                            MouseDown="ListView_MouseButtonDown"
                            ScrollViewer.CanContentScroll="False"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectedItem="{Binding ViewModel.SelectedItem, Mode=TwoWay}"
                            SelectionMode="Single"
                            Visibility="{Binding ViewModel.IsHomePage, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <ListView.Resources>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Padding" Value="8,6" />
                                    <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
                                    <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                                    <Setter Property="BorderThickness" Value="0,0,1,1" />
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                </Style>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="MinHeight" Value="32" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border
                                                    x:Name="Border"
                                                    Background="Transparent"
                                                    BorderThickness="0">
                                                    <GridViewRowPresenter Margin="8,4" Content="{TemplateBinding Content}" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="350" Header="名前">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate DataType="{x:Type models:FileSystemItem}">
                                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                    <ui:SymbolIcon
                                                        Width="20"
                                                        Height="20"
                                                        Margin="0,0,12,0"
                                                        VerticalAlignment="Center"
                                                        Symbol="{Binding IsDirectory, Converter={StaticResource DirectoryIconConverter}, Mode=OneWay}" />
                                                    <TextBlock
                                                        VerticalAlignment="Center"
                                                        Text="{Binding Name, Mode=OneWay}"
                                                        TextTrimming="CharacterEllipsis" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="120" Header="サイズ">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate DataType="{x:Type models:FileSystemItem}">
                                                <TextBlock
                                                    Padding="8,0"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding FormattedSize, Mode=OneWay}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="180" Header="種類">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate DataType="{x:Type models:FileSystemItem}">
                                                <TextBlock
                                                    Padding="8,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding Extension, Mode=OneWay}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="200" Header="更新日時">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate DataType="{x:Type models:FileSystemItem}">
                                                <TextBlock
                                                    Padding="8,0"
                                                    VerticalAlignment="Center"
                                                    Text="{Binding FormattedDate, Mode=OneWay}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!--  ローディング表示  -->
                        <Grid
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <ui:ProgressRing
                                    Width="50"
                                    Height="50"
                                    IsIndeterminate="{Binding ViewModel.IsLoading, Mode=OneWay}" />
                                <TextBlock
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Center"
                                    Text="読み込み中..." />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
