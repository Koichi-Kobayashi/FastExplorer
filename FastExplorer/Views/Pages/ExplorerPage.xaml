<UserControl
    x:Class="FastExplorer.Views.Pages.ExplorerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:FastExplorer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:FastExplorer.Helpers"
    xmlns:local="clr-namespace:FastExplorer.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:FastExplorer.Models"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:uiControls="clr-namespace:Wpf.Ui.Controls;assembly=Wpf.Ui"
    d:DataContext="{d:DesignInstance local:ExplorerPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    SnapsToDevicePixels="True"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  コンバーター  -->
        <helpers:SymbolRegularConverter x:Key="SymbolRegularConverter" />

        <!--  ListView用の共通スタイル（重複を削減）  -->
        <Style x:Key="FileListViewGridViewColumnHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <EventSetter Event="Click" Handler="GridViewColumnHeader_Click" />
            <EventSetter Event="MouseDoubleClick" Handler="GridViewColumnHeader_MouseDoubleClick" />
            <EventSetter Event="PreviewMouseDoubleClick" Handler="GridViewColumnHeader_PreviewMouseDoubleClick" />
        </Style>
        <Style x:Key="FileListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}" />
            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
            <EventSetter Event="PreviewMouseMove" Handler="ListViewItem_PreviewMouseMove" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border
                            x:Name="Border"
                            Background="Transparent"
                            BorderThickness="0">
                            <GridViewRowPresenter Margin="8,4" Content="{TemplateBinding Content}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  パンくずリストとタブ名用の共通Buttonテンプレート（重複を削減）  -->
        <ControlTemplate x:Key="BreadcrumbButtonTemplate" TargetType="Button">
            <Border
                x:Name="Border"
                Padding="{TemplateBinding Padding}"
                Background="{TemplateBinding Background}"
                BorderBrush="Transparent"
                BorderThickness="1"
                CornerRadius="4">
                <ContentPresenter
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content="{TemplateBinding Content}" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentFillColorSecondaryBrush}" />
                    <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!--  パンくずリストとタブ名用の共通Buttonスタイル（重複を削減）  -->
        <Style x:Key="BreadcrumbButtonStyle" TargetType="Button">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template" Value="{StaticResource BreadcrumbButtonTemplate}" />
        </Style>

        <!--  共通のBorderスタイル（ホバー効果付き）  -->
        <Style x:Key="InteractiveBorderStyle" TargetType="Border">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                    <Setter Property="BorderThickness" Value="2" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  最近使用したファイル用のBorderスタイル  -->
        <Style x:Key="RecentFileBorderStyle" TargetType="Border">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                    <Setter Property="BorderThickness" Value="1" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  ピン留めフォルダーのDataTemplate  -->
        <DataTemplate x:Key="PinnedFolderTemplate" DataType="{x:Type models:FavoriteItem}">
            <Border
                x:Name="PinnedFolderBorder"
                Margin="4"
                Padding="12"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Cursor="Hand"
                MouseLeftButtonDown="PinnedFolder_MouseLeftButtonDown"
                Style="{StaticResource InteractiveBorderStyle}">
                <StackPanel>
                    <ui:SymbolIcon
                        Width="48"
                        Height="48"
                        Margin="0,0,0,8"
                        HorizontalAlignment="Center"
                        Symbol="{Binding Name, Mode=OneWay, Converter={StaticResource FolderIconConverter}}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Text="{Binding Name, Mode=OneWay}"
                        TextAlignment="Center"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </DataTemplate>

        <!--  ドライブのDataTemplate  -->
        <DataTemplate x:Key="DriveTemplate" DataType="{x:Type models:DriveInfoModel}">
            <Border
                Margin="0,0,0,8"
                Padding="12"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Cursor="Hand"
                MouseLeftButtonDown="Drive_MouseLeftButtonDown"
                Style="{StaticResource InteractiveBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Width="32"
                        Height="32"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe Fluent Icons"
                        FontSize="32"
                        Foreground="{DynamicResource IconBrush}"
                        Text="&#xEDA2;" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock FontWeight="SemiBold" Text="{Binding Name, Mode=OneWay}" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding Path, Mode=OneWay}" />
                        <ProgressBar
                            Height="4"
                            Margin="0,4,0,0"
                            Maximum="1"
                            Value="{Binding UsagePercentage, Mode=OneWay}" />
                        <TextBlock FontSize="11" Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <Run Text="空き領域 " />
                            <Run Text="{Binding FormattedFreeSpace, Mode=OneWay}" />
                            <Run Text="/" />
                            <Run Text="{Binding FormattedTotalSize, Mode=OneWay}" />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!--  GridViewColumn用のCellTemplate（重複を削減）  -->
        <DataTemplate x:Key="FileNameCellTemplate" DataType="{x:Type models:FileSystemItem}">
            <StackPanel
                VerticalAlignment="Center"
                Orientation="Horizontal"
                UseLayoutRounding="True">
                <ui:SymbolIcon
                    Width="20"
                    Height="20"
                    Margin="0,0,12,0"
                    VerticalAlignment="Center"
                    Symbol="{Binding IsDirectory, Converter={StaticResource DirectoryIconConverter}, Mode=OneWay, FallbackValue=''}" />
                <Grid>
                    <TextBlock
                        x:Name="FileNameTextBlock"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="{Binding Name, Mode=OneWay, FallbackValue=''}"
                        TextOptions.TextFormattingMode="Display"
                        TextOptions.TextRenderingMode="ClearType"
                        TextTrimming="CharacterEllipsis" />
                    <TextBox
                        x:Name="FileNameTextBox"
                        MinWidth="200"
                        Padding="2,1"
                        VerticalAlignment="Center"
                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                        BorderBrush="{DynamicResource AccentFillColorDefaultBrush}"
                        BorderThickness="1"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Visibility="Collapsed" />
                </Grid>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="FileSizeCellTemplate" DataType="{x:Type models:FileSystemItem}">
            <TextBlock
                Padding="8,0"
                HorizontalAlignment="Right"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding FormattedSize, Mode=OneWay, FallbackValue=''}"
                TextOptions.TextFormattingMode="Display"
                TextOptions.TextRenderingMode="ClearType"
                TextTrimming="CharacterEllipsis" />
        </DataTemplate>
        <DataTemplate x:Key="FileExtensionCellTemplate" DataType="{x:Type models:FileSystemItem}">
            <TextBlock
                Padding="8,0"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding Extension, Mode=OneWay, FallbackValue=''}"
                TextOptions.TextFormattingMode="Display"
                TextOptions.TextRenderingMode="ClearType"
                TextTrimming="CharacterEllipsis" />
        </DataTemplate>
        <DataTemplate x:Key="FileDateCellTemplate" DataType="{x:Type models:FileSystemItem}">
            <TextBlock
                Padding="8,0"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding FormattedDate, Mode=OneWay, FallbackValue=''}"
                TextOptions.TextFormattingMode="Display"
                TextOptions.TextRenderingMode="ClearType"
                TextTrimming="CharacterEllipsis" />
        </DataTemplate>

        <!--  共通のButtonスタイル（ホバー効果付き）  -->
        <Style
            x:Key="HoverableButtonStyle"
            BasedOn="{StaticResource {x:Type ui:Button}}"
            TargetType="ui:Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!--  最近使用したファイルのDataTemplate  -->
        <DataTemplate x:Key="RecentFileTemplate" DataType="{x:Type models:FileSystemItem}">
            <Border
                Margin="0,0,0,4"
                Padding="8,6"
                Background="Transparent"
                BorderThickness="0"
                CornerRadius="4"
                Cursor="Hand"
                MouseLeftButtonDown="RecentFile_MouseLeftButtonDown"
                Style="{StaticResource RecentFileBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:SymbolIcon
                        Grid.Column="0"
                        Width="20"
                        Height="20"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center"
                        Symbol="{Binding IsDirectory, Converter={StaticResource DirectoryIconConverter}, Mode=OneWay}" />
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Name, Mode=OneWay}" />
                        <TextBlock
                            FontSize="11"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{Binding FullPath, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ExplorerTabContentTemplate" DataType="{x:Type models:ExplorerTab}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  パスインジケーター（ブレッドクラム）  -->
                <Border
                    Grid.Row="0"
                    Margin="0,0,0,1"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid Margin="12,8">
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <ui:Button
                                Margin="0,0,4,0"
                                Padding="8,4"
                                Appearance="Secondary"
                                Command="{Binding ViewModel.NavigateToPathCommand, Mode=OneWay}"
                                CommandParameter=""
                                Style="{StaticResource HoverableButtonStyle}"
                                ToolTip="ホーム">
                                <ui:Button.Icon>
                                    <ui:SymbolIcon Symbol="Home24" />
                                </ui:Button.Icon>
                            </ui:Button>
                            <ItemsControl VerticalAlignment="Center" ItemsSource="{Binding ViewModel.CurrentPath, Mode=OneWay, Converter={StaticResource PathToBreadcrumbItemsConverter}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type helpers:BreadcrumbItem}">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Margin="4,0"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                Text="&gt;" />
                                            <Button
                                                Margin="2,0"
                                                Padding="4,2"
                                                Command="{Binding DataContext.ViewModel.NavigateToPathCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding Path}"
                                                Cursor="Hand"
                                                Style="{StaticResource BreadcrumbButtonStyle}"
                                                ToolTip="{Binding Path}">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                    Text="{Binding Name}"
                                                    TextTrimming="CharacterEllipsis" />
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  ツールバー  -->
                <Border
                    Grid.Row="1"
                    Margin="0,0,0,1"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid Margin="8,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ui:Button
                            Grid.Column="0"
                            Margin="0,0,4,0"
                            Appearance="Secondary"
                            Command="{Binding ViewModel.NavigateToParentCommand, Mode=OneWay}"
                            Style="{StaticResource HoverableButtonStyle}"
                            ToolTip="戻る">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowLeft24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button
                            Grid.Column="1"
                            Margin="0,0,4,0"
                            Appearance="Secondary"
                            Command="{Binding ViewModel.RefreshCommand, Mode=OneWay}"
                            Style="{StaticResource HoverableButtonStyle}"
                            ToolTip="更新">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowClockwise24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button
                            Grid.Column="2"
                            Margin="0,0,4,0"
                            Appearance="Secondary"
                            Command="{Binding DataContext.ViewModel.AddCurrentPathToFavoritesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource HoverableButtonStyle}"
                            ToolTip="お気に入りに追加">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Star24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button
                            Grid.Column="3"
                            Margin="0,0,4,0"
                            Appearance="Secondary"
                            Command="{Binding DataContext.ViewModel.ToggleSplitPaneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            Style="{StaticResource HoverableButtonStyle}"
                            ToolTip="{Binding DataContext.ViewModel.IsSplitPaneEnabled, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToSplitPaneMenuTextConverter}}">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowExportRtl24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button
                            Grid.Column="4"
                            Appearance="Secondary"
                            Click="CopyPathButton_Click"
                            Style="{StaticResource HoverableButtonStyle}"
                            ToolTip="パスをクリップボードにコピー">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Copy24" />
                            </ui:Button.Icon>
                        </ui:Button>
                    </Grid>
                </Border>

                <!--  ホームページ  -->
                <ScrollViewer
                    x:Name="SinglePaneHomePageScrollViewer"
                    Grid.Row="2"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto"
                    Visibility="{Binding ViewModel.IsHomePage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel Margin="16">
                        <!--  クイックアクセス  -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock
                                Margin="0,0,0,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="クイック アクセス" />
                            <ItemsControl ItemsSource="{Binding ViewModel.PinnedFolders, Mode=OneWay}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="6" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <StaticResource ResourceKey="PinnedFolderTemplate" />
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!--  ドライブ  -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock
                                Margin="0,0,0,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="ドライブ" />
                            <ItemsControl ItemsSource="{Binding ViewModel.Drives, Mode=OneWay}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <StaticResource ResourceKey="DriveTemplate" />
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!--  ネットワークの場所  -->
                        <StackPanel Margin="0,0,0,24">
                            <TextBlock
                                Margin="0,0,0,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="ネットワークの場所" />
                            <Border
                                Padding="12"
                                Background="{DynamicResource ControlFillColorDefaultBrush}"
                                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBlock
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="ネットワークの場所がありません。ネットワークの場所を使用しない場合は、ウィジェットを無効にすることができます。"
                                    TextWrapping="Wrap" />
                            </Border>
                        </StackPanel>

                        <!--  最近使用したファイル  -->
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,12"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="最近使用したファイル" />
                            <ItemsControl ItemsSource="{Binding ViewModel.RecentFilesList, Mode=OneWay}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <StaticResource ResourceKey="RecentFileTemplate" />
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!--  ファイルリスト  -->
                <ListView
                    x:Name="FileListView"
                    Grid.Row="2"
                    AllowDrop="True"
                    Background="Transparent"
                    DragOver="ListView_DragOver"
                    Drop="ListView_Drop"
                    Focusable="True"
                    GotFocus="ListView_GotFocus"
                    ItemsSource="{Binding ViewModel.Items, Mode=OneWay}"
                    KeyDown="ListView_KeyDown"
                    MouseDoubleClick="ListView_MouseDoubleClick"
                    MouseDown="ListView_MouseButtonDown"
                    MouseRightButtonUp="ListView_MouseRightButtonUp"
                    PreviewMouseDown="ListView_PreviewMouseDown"
                    RenderOptions.ClearTypeHint="Enabled"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectedItem="{Binding ViewModel.SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Single"
                    UseLayoutRounding="True"
                    VirtualizingStackPanel.CacheLength="0,1000"
                    VirtualizingStackPanel.IsVirtualizing="True"
                    VirtualizingStackPanel.VirtualizationMode="Recycling"
                    Visibility="{Binding ViewModel.IsHomePage, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <ListView.Resources>
                        <Style BasedOn="{StaticResource FileListViewGridViewColumnHeaderStyle}" TargetType="GridViewColumnHeader" />
                        <Style BasedOn="{StaticResource FileListViewItemStyle}" TargetType="ListViewItem">
                            <EventSetter Event="MouseRightButtonUp" Handler="ListViewItem_MouseRightButtonUp" />
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="350"
                                CellTemplate="{StaticResource FileNameCellTemplate}"
                                Header="名前" />
                            <GridViewColumn
                                Width="120"
                                CellTemplate="{StaticResource FileSizeCellTemplate}"
                                Header="サイズ" />
                            <GridViewColumn
                                Width="180"
                                CellTemplate="{StaticResource FileExtensionCellTemplate}"
                                Header="種類" />
                            <GridViewColumn
                                Width="200"
                                CellTemplate="{StaticResource FileDateCellTemplate}"
                                Header="更新日時" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <!--  ローディング表示  -->
                <Grid
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <ui:ProgressRing
                            Width="50"
                            Height="50"
                            IsIndeterminate="{Binding ViewModel.IsLoading, Mode=OneWay}" />
                        <TextBlock
                            Margin="0,8,0,0"
                            HorizontalAlignment="Center"
                            Text="読み込み中..." />
                    </StackPanel>
                </Grid>

                <!--  ステータスバー  -->
                <Border
                    Grid.Row="3"
                    Background="{DynamicResource StatusBarBackgroundBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0">
                    <Grid Margin="12,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  中央: パスと項目数  -->
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource StatusBarTextBrush}"
                            Text="{Binding ViewModel.StatusBarText, Mode=OneWay, FallbackValue='準備完了'}"
                            TextOptions.TextFormattingMode="Display"
                            TextOptions.TextRenderingMode="ClearType" />
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
        <!--  RepeatButtonのContentをSymbolRegular値に設定するスタイル  -->
        <Style x:Key="ScrollButtonStyle" TargetType="RepeatButton">
            <!--  Contentは各RepeatButtonで個別に設定  -->
        </Style>

        <!--  TabControlのスクロールボタン用のRepeatButtonスタイル  -->
        <!--  バインディングエラーを回避するため、スタイルを最小限に設定  -->
        <Style x:Key="TabScrollButtonStyle" TargetType="RepeatButton">
            <!--  テンプレートを設定しない（デフォルトのテンプレートを使用）  -->
        </Style>

        <!--  右スクロールボタン用のスタイル（左と同じ）  -->
        <Style x:Key="TabScrollButtonRightStyle" TargetType="RepeatButton">
            <!--  テンプレートを設定しない（デフォルトのテンプレートを使用）  -->
        </Style>

        <!--  タブのコンテキストメニュー  -->
        <ContextMenu
            x:Key="TabContextMenu"
            x:Shared="False"
            Opened="TabContextMenu_Opened">
            <MenuItem
                x:Name="DuplicateTabMenuItem"
                Click="TabContextMenuItem_Click"
                Header="タブを複製" />
            <MenuItem
                x:Name="DuplicateTabToNewWindowMenuItem"
                Click="TabContextMenuItem_Click"
                Header="新しいウィンドウにタブを複製" />
            <MenuItem
                x:Name="MoveTabToNewWindowMenuItem"
                Click="TabContextMenuItem_Click"
                Header="新しいウィンドウにタブを移動" />
            <Separator />
            <MenuItem
                x:Name="CloseTabsToLeftMenuItem"
                Click="TabContextMenuItem_Click"
                Header="これより左のタブを閉じる" />
            <MenuItem
                x:Name="CloseTabsToRightMenuItem"
                Click="TabContextMenuItem_Click"
                Header="これより右のタブを閉じる" />
            <MenuItem
                x:Name="CloseOtherTabsMenuItem"
                Click="TabContextMenuItem_Click"
                Header="他のタブをすべて閉じる" />
        </ContextMenu>

    </UserControl.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  分割ペインモード  -->
        <Grid
            Grid.Row="1"
            Margin="0,0,0,4"
            Visibility="{Binding ViewModel.IsSplitPaneEnabled, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  左ペイン  -->
            <TabControl
                Grid.Column="0"
                Margin="0,0,0,0"
                uiControls:TabControlExtensions.CanAddTabs="True"
                uiControls:TabControlExtensions.CanReorderTabs="True"
                uiControls:TabControlExtensions.TabAdding="TabControl_TabAdding"
                uiControls:TabControlExtensions.TabClosing="TabControl_TabClosing"
                AllowDrop="True"
                DragOver="TabControl_DragOver"
                Drop="TabControl_Drop"
                ItemsSource="{Binding ViewModel.LeftPaneTabs, Mode=OneWay}"
                SelectedItem="{Binding ViewModel.SelectedLeftPaneTab, Mode=TwoWay}">
                <TabControl.ItemContainerStyle>
                    <Style BasedOn="{StaticResource {x:Type TabItem}}" TargetType="TabItem">
                        <Setter Property="uiControls:TabControlExtensions.IsClosable" Value="True" />
                        <Setter Property="ContextMenu" Value="{StaticResource TabContextMenu}" />
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TabItem_PreviewMouseLeftButtonDown" />
                        <EventSetter Event="PreviewMouseLeftButtonUp" Handler="TabItem_PreviewMouseLeftButtonUp" />
                        <EventSetter Event="PreviewMouseMove" Handler="TabItem_PreviewMouseMove" />
                        <EventSetter Event="MouseRightButtonUp" Handler="TabArea_MouseRightButtonUp" />
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ExplorerTab}">
                        <TextBlock
                            VerticalAlignment="Center"
                            Text="{Binding Title, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis">
                            <TextBlock.ToolTip>
                                <TextBlock
                                    MaxWidth="500"
                                    Text="{Binding ViewModel.CurrentPath, Mode=OneWay}"
                                    TextWrapping="Wrap" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate DataType="{x:Type models:ExplorerTab}">
                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource ExplorerTabContentTemplate}" />
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>

            <!--  分割バー  -->
            <GridSplitter
                Grid.Column="1"
                Width="4"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource ControlStrokeColorDefaultBrush}"
                ResizeBehavior="PreviousAndNext"
                ShowsPreview="False" />

            <!--  右ペイン  -->
            <TabControl
                Grid.Column="2"
                Margin="0,0,0,0"
                uiControls:TabControlExtensions.CanAddTabs="True"
                uiControls:TabControlExtensions.CanReorderTabs="True"
                uiControls:TabControlExtensions.TabAdding="TabControl_TabAdding"
                uiControls:TabControlExtensions.TabClosing="TabControl_TabClosing"
                AllowDrop="True"
                DragOver="TabControl_DragOver"
                Drop="TabControl_Drop"
                ItemsSource="{Binding ViewModel.RightPaneTabs, Mode=OneWay}"
                SelectedItem="{Binding ViewModel.SelectedRightPaneTab, Mode=TwoWay}">
                <TabControl.ItemContainerStyle>
                    <Style BasedOn="{StaticResource {x:Type TabItem}}" TargetType="TabItem">
                        <Setter Property="uiControls:TabControlExtensions.IsClosable" Value="True" />
                        <Setter Property="ContextMenu" Value="{StaticResource TabContextMenu}" />
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TabItem_PreviewMouseLeftButtonDown" />
                        <EventSetter Event="PreviewMouseLeftButtonUp" Handler="TabItem_PreviewMouseLeftButtonUp" />
                        <EventSetter Event="PreviewMouseMove" Handler="TabItem_PreviewMouseMove" />
                        <EventSetter Event="MouseRightButtonUp" Handler="TabArea_MouseRightButtonUp" />
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:ExplorerTab}">
                        <TextBlock
                            VerticalAlignment="Center"
                            Text="{Binding Title, Mode=OneWay}"
                            TextTrimming="CharacterEllipsis">
                            <TextBlock.ToolTip>
                                <TextBlock
                                    MaxWidth="500"
                                    Text="{Binding ViewModel.CurrentPath, Mode=OneWay}"
                                    TextWrapping="Wrap" />
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate DataType="{x:Type models:ExplorerTab}">
                        <ContentControl Content="{Binding}" ContentTemplate="{StaticResource ExplorerTabContentTemplate}" />
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </Grid>

        <!--  通常モード（分割ペイン無効時）  -->
        <TabControl
            Grid.Row="1"
            Margin="0,0,0,4"
            uiControls:TabControlExtensions.CanAddTabs="True"
            uiControls:TabControlExtensions.CanReorderTabs="True"
            uiControls:TabControlExtensions.TabAdding="TabControl_TabAdding"
            uiControls:TabControlExtensions.TabClosing="TabControl_TabClosing"
            AllowDrop="True"
            DragOver="TabControl_DragOver"
            Drop="TabControl_Drop"
            ItemsSource="{Binding ViewModel.Tabs, Mode=OneWay}"
            SelectedItem="{Binding ViewModel.SelectedTab, Mode=TwoWay}"
            Visibility="{Binding ViewModel.IsSplitPaneEnabled, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <TabControl.ItemContainerStyle>
                <Style BasedOn="{StaticResource {x:Type TabItem}}" TargetType="TabItem">
                    <Setter Property="uiControls:TabControlExtensions.IsClosable" Value="True" />
                    <Setter Property="ContextMenu" Value="{StaticResource TabContextMenu}" />
                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="TabItem_PreviewMouseLeftButtonDown" />
                    <EventSetter Event="PreviewMouseMove" Handler="TabItem_PreviewMouseMove" />
                    <EventSetter Event="MouseRightButtonUp" Handler="TabArea_MouseRightButtonUp" />
                </Style>
            </TabControl.ItemContainerStyle>
            <TabControl.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ExplorerTab}">
                    <TextBlock
                        VerticalAlignment="Center"
                        Text="{Binding Title, Mode=OneWay}"
                        TextTrimming="CharacterEllipsis">
                        <TextBlock.ToolTip>
                            <TextBlock
                                MaxWidth="500"
                                Text="{Binding ViewModel.CurrentPath, Mode=OneWay}"
                                TextWrapping="Wrap" />
                        </TextBlock.ToolTip>
                    </TextBlock>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="{x:Type models:ExplorerTab}">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  パスインジケーター（ブレッドクラム）  -->
                        <Border
                            Grid.Row="0"
                            Margin="0,0,0,1"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="0,0,0,1">
                            <Grid Margin="12,8">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <ui:Button
                                        Margin="0,0,4,0"
                                        Padding="8,4"
                                        Appearance="Secondary"
                                        Command="{Binding ViewModel.NavigateToPathCommand, Mode=OneWay}"
                                        CommandParameter=""
                                        ToolTip="ホーム">
                                        <ui:Button.Style>
                                            <Style BasedOn="{StaticResource {x:Type ui:Button}}" TargetType="ui:Button">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource AccentFillColorDefaultBrush}" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ui:Button.Style>
                                        <ui:Button.Icon>
                                            <ui:SymbolIcon Symbol="Home24" />
                                        </ui:Button.Icon>
                                    </ui:Button>
                                    <ItemsControl VerticalAlignment="Center" ItemsSource="{Binding ViewModel.CurrentPath, Mode=OneWay, Converter={StaticResource PathToBreadcrumbItemsConverter}}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type helpers:BreadcrumbItem}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        Margin="4,0"
                                                        VerticalAlignment="Center"
                                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                        Text="&gt;" />
                                                    <Button
                                                        Margin="2,0"
                                                        Padding="4,2"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Command="{Binding DataContext.ViewModel.NavigateToPathCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding Path}"
                                                        Cursor="Hand"
                                                        ToolTip="{Binding Path}">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                            Text="{Binding Name}"
                                                            TextTrimming="CharacterEllipsis" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!--  ツールバー  -->
                        <Border
                            Grid.Row="1"
                            Margin="0,0,0,1"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="0,0,0,1">
                            <Grid Margin="8,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <ui:Button
                                    Grid.Column="0"
                                    Margin="0,0,4,0"
                                    Appearance="Secondary"
                                    Command="{Binding ViewModel.NavigateToParentCommand, Mode=OneWay}"
                                    Style="{StaticResource HoverableButtonStyle}"
                                    ToolTip="戻る">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="ArrowLeft24" />
                                    </ui:Button.Icon>
                                </ui:Button>

                                <ui:Button
                                    Grid.Column="1"
                                    Margin="0,0,4,0"
                                    Appearance="Secondary"
                                    Command="{Binding ViewModel.RefreshCommand, Mode=OneWay}"
                                    Style="{StaticResource HoverableButtonStyle}"
                                    ToolTip="更新">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="ArrowClockwise24" />
                                    </ui:Button.Icon>
                                </ui:Button>

                                <ui:Button
                                    Grid.Column="2"
                                    Margin="0,0,4,0"
                                    Appearance="Secondary"
                                    Command="{Binding DataContext.ViewModel.AddCurrentPathToFavoritesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Style="{StaticResource HoverableButtonStyle}"
                                    ToolTip="お気に入りに追加">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="Star24" />
                                    </ui:Button.Icon>
                                </ui:Button>

                                <ui:Button
                                    Grid.Column="3"
                                    Margin="0,0,4,0"
                                    Appearance="Secondary"
                                    Command="{Binding DataContext.ViewModel.ToggleSplitPaneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Style="{StaticResource HoverableButtonStyle}"
                                    ToolTip="{Binding DataContext.ViewModel.IsSplitPaneEnabled, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToSplitPaneMenuTextConverter}}">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="SplitVertical24" />
                                    </ui:Button.Icon>
                                </ui:Button>

                                <ui:Button
                                    Grid.Column="4"
                                    Appearance="Secondary"
                                    Click="CopyPathButton_Click"
                                    Style="{StaticResource HoverableButtonStyle}"
                                    ToolTip="パスをクリップボードにコピー">
                                    <ui:Button.Icon>
                                        <ui:SymbolIcon Symbol="Copy24" />
                                    </ui:Button.Icon>
                                </ui:Button>
                            </Grid>
                        </Border>

                        <!--  ホームページ  -->
                        <ScrollViewer
                            x:Name="SplitPaneHomePageScrollViewer"
                            Grid.Row="2"
                            HorizontalScrollBarVisibility="Auto"
                            VerticalScrollBarVisibility="Auto"
                            Visibility="{Binding ViewModel.IsHomePage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Margin="16">
                                <!--  クイックアクセス  -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock
                                        Margin="0,0,0,12"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="クイック アクセス" />
                                    <ItemsControl ItemsSource="{Binding ViewModel.PinnedFolders, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <UniformGrid Columns="6" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <StaticResource ResourceKey="PinnedFolderTemplate" />
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!--  ドライブ  -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock
                                        Margin="0,0,0,12"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="ドライブ" />
                                    <ItemsControl ItemsSource="{Binding ViewModel.Drives, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <StaticResource ResourceKey="DriveTemplate" />
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <!--  ネットワークの場所  -->
                                <StackPanel Margin="0,0,0,24">
                                    <TextBlock
                                        Margin="0,0,0,12"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="ネットワークの場所" />
                                    <Border
                                        Padding="12"
                                        Background="{DynamicResource ControlFillColorDefaultBrush}"
                                        BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <TextBlock
                                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                            Text="ネットワークの場所がありません。ネットワークの場所を使用しない場合は、ウィジェットを無効にすることができます。"
                                            TextWrapping="Wrap" />
                                    </Border>
                                </StackPanel>

                                <!--  最近使用したファイル  -->
                                <StackPanel>
                                    <TextBlock
                                        Margin="0,0,0,12"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="最近使用したファイル" />
                                    <ItemsControl ItemsSource="{Binding ViewModel.RecentFilesList, Mode=OneWay}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <StaticResource ResourceKey="RecentFileTemplate" />
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!--  ファイルリスト  -->
                        <ListView
                            x:Name="FileListView"
                            Grid.Row="2"
                            AllowDrop="True"
                            Background="Transparent"
                            DragOver="ListView_DragOver"
                            Drop="ListView_Drop"
                            Focusable="True"
                            GotFocus="ListView_GotFocus"
                            ItemsSource="{Binding ViewModel.Items, Mode=OneWay}"
                            KeyDown="ListView_KeyDown"
                            MouseDoubleClick="ListView_MouseDoubleClick"
                            MouseDown="ListView_MouseButtonDown"
                            MouseRightButtonUp="ListView_MouseRightButtonUp"
                            PreviewMouseDown="ListView_PreviewMouseDown"
                            RenderOptions.ClearTypeHint="Enabled"
                            ScrollViewer.CanContentScroll="False"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            SelectedItem="{Binding ViewModel.SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            SelectionMode="Single"
                            UseLayoutRounding="True"
                            VirtualizingStackPanel.CacheLength="0,1000"
                            VirtualizingStackPanel.IsVirtualizing="True"
                            VirtualizingStackPanel.VirtualizationMode="Recycling"
                            Visibility="{Binding ViewModel.IsHomePage, Mode=OneWay, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <ListView.Resources>
                                <Style BasedOn="{StaticResource FileListViewGridViewColumnHeaderStyle}" TargetType="GridViewColumnHeader" />
                                <Style BasedOn="{StaticResource FileListViewItemStyle}" TargetType="ListViewItem">
                                    <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListViewItem_PreviewMouseLeftButtonDown" />
                                    <EventSetter Event="PreviewMouseMove" Handler="ListViewItem_PreviewMouseMove" />
                                    <EventSetter Event="MouseRightButtonUp" Handler="ListViewItem_MouseRightButtonUp" />
                                </Style>
                            </ListView.Resources>
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn
                                        Width="350"
                                        CellTemplate="{StaticResource FileNameCellTemplate}"
                                        Header="名前" />
                                    <GridViewColumn
                                        Width="120"
                                        CellTemplate="{StaticResource FileSizeCellTemplate}"
                                        Header="サイズ" />
                                    <GridViewColumn
                                        Width="180"
                                        CellTemplate="{StaticResource FileExtensionCellTemplate}"
                                        Header="種類" />
                                    <GridViewColumn
                                        Width="200"
                                        CellTemplate="{StaticResource FileDateCellTemplate}"
                                        Header="更新日時" />
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <!--  ローディング表示  -->
                        <Grid
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <ui:ProgressRing
                                    Width="50"
                                    Height="50"
                                    IsIndeterminate="{Binding ViewModel.IsLoading, Mode=OneWay}" />
                                <TextBlock
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Center"
                                    Text="読み込み中..." />
                            </StackPanel>
                        </Grid>

                        <!--  ステータスバー  -->
                        <Border
                            Grid.Row="3"
                            Background="{DynamicResource StatusBarBackgroundBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="0,1,0,0">
                            <Grid Margin="12,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  中央: パスと項目数  -->
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Foreground="{DynamicResource StatusBarTextBrush}"
                                    Text="{Binding ViewModel.StatusBarText, Mode=OneWay, FallbackValue='準備完了'}"
                                    TextOptions.TextFormattingMode="Display"
                                    TextOptions.TextRenderingMode="ClearType" />
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
