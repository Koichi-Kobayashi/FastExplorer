<ui:FluentWindow
    x:Class="FastExplorer.Views.Windows.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:FastExplorer.Helpers"
    xmlns:local="clr-namespace:FastExplorer.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="設定"
    Width="800"
    Height="600"
    d:DataContext="{d:DesignInstance local:SettingsWindow,
                                     IsDesignTimeCreatable=False}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Window.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="設定"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui-icon-256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  左側のナビゲーションメニュー  -->
            <Border
                Grid.Column="0"
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">
                <StackPanel Margin="12">
                    <ui:Button
                        x:Name="GeneralButton"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Appearance="Secondary"
                        Click="NavigationButton_Click"
                        Content="全般"
                        Icon="{ui:SymbolIcon Settings24}"
                        Tag="General" />
                    <ui:Button
                        x:Name="AppearanceButton"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Appearance="Secondary"
                        Click="NavigationButton_Click"
                        Content="外観"
                        Icon="{ui:SymbolIcon PaintBrush24}"
                        Tag="Appearance" />
                    <ui:Button
                        x:Name="LayoutButton"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Appearance="Secondary"
                        Click="NavigationButton_Click"
                        Content="レイアウト"
                        Icon="{ui:SymbolIcon LayoutColumnTwo24}"
                        Tag="Layout" />
                    <ui:Button
                        x:Name="OperationButton"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Appearance="Secondary"
                        Click="NavigationButton_Click"
                        Content="操作"
                        Icon="{ui:SymbolIcon Options24}"
                        Tag="Operation" />
                    <ui:Button
                        x:Name="TagButton"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Appearance="Secondary"
                        Click="NavigationButton_Click"
                        Content="タグ"
                        Icon="{ui:SymbolIcon Tag24}"
                        Tag="Tag" />
                    <ui:Button
                        x:Name="DevToolsButton"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Appearance="Secondary"
                        Click="NavigationButton_Click"
                        Content="開発者向けツール"
                        Icon="{ui:SymbolIcon DeveloperBoard24}"
                        Tag="DevTools" />
                    <ui:Button
                        x:Name="AdvancedButton"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Appearance="Secondary"
                        Click="NavigationButton_Click"
                        Content="高度な設定"
                        Icon="{ui:SymbolIcon Settings24}"
                        Tag="Advanced" />
                    <ui:Button
                        x:Name="AboutButton"
                        Margin="0,4,0,0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Appearance="Secondary"
                        Click="NavigationButton_Click"
                        Content="FastExplore について"
                        Icon="{ui:SymbolIcon Info24}"
                        Tag="About" />
                </StackPanel>
            </Border>

            <!--  右側のコンテンツエリア  -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24,24,24,0">
                    <TextBlock
                        FontSize="20"
                        FontWeight="Medium"
                        Text="全般" />

                    <!--  言語設定  -->
                    <TextBlock
                        Margin="0,24,0,8"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="言語" />
                    <ComboBox Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem Content="システム設定を使用" IsSelected="True" />
                    </ComboBox>

                    <!--  日付の形式  -->
                    <TextBlock
                        Margin="0,24,0,8"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="日付の形式" />
                    <TextBlock Foreground="{DynamicResource TextFillColorSecondaryBrush}" Text="例: 5 秒前, 2020年12月31日" />
                    <ComboBox
                        Width="200"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Left">
                        <ComboBoxItem Content="アプリ" IsSelected="True" />
                    </ComboBox>

                    <!--  起動時の設定  -->
                    <TextBlock
                        Margin="0,24,0,8"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="起動時の設定" />
                    <ComboBox Width="300" HorizontalAlignment="Left">
                        <ComboBoxItem Content="最後の操作を続行" IsSelected="True" />
                    </ComboBox>

                    <!--  デュアルペインモード  -->
                    <TextBlock
                        Margin="0,24,0,8"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="デュアルペインモード" />
                    <ui:ToggleSwitch Content="デュアル ペインでタブを開く" IsChecked="False" />

                    <TextBlock
                        Margin="0,24,0,0"
                        FontSize="20"
                        FontWeight="Medium"
                        Text="外観" />

                    <!--  テーマ  -->
                    <TextBlock Margin="0,12,0,0" Text="Theme" />
                    <RadioButton
                        Margin="0,12,0,0"
                        Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                        CommandParameter="theme_light"
                        Content="Light"
                        GroupName="themeSelect"
                        IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
                    <RadioButton
                        Margin="0,8,0,0"
                        Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
                        CommandParameter="theme_dark"
                        Content="Dark"
                        GroupName="themeSelect"
                        IsChecked="{Binding ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />

                    <!--  テーマカラー  -->
                    <TextBlock Margin="0,24,0,12" Text="Theme Color" />
                    <ItemsControl ItemsSource="{Binding ViewModel.ThemeColors, Mode=OneWay}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="10" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Width="40"
                                    Height="40"
                                    Margin="4"
                                    Padding="0"
                                    Command="{Binding DataContext.ViewModel.SelectThemeColorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Cursor="Hand"
                                    ToolTip="{Binding Name}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Background="{Binding Color}"
                                                BorderBrush="{DynamicResource TextFillColorSecondaryBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderThickness" Value="2" />
                                                                <Setter Property="BorderBrush" Value="{DynamicResource TextFillColorPrimaryBrush}" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock
                        Margin="0,24,0,0"
                        FontSize="20"
                        FontWeight="Medium"
                        Text="Explorer" />
                    <CheckBox
                        Margin="0,12,0,0"
                        Content="分割ペインを有効にする（WinSCPスタイル）"
                        IsChecked="{Binding ViewModel.IsSplitPaneEnabled, Mode=TwoWay}" />
                    <TextBlock
                        Margin="0,8,0,0"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="有効にすると、左右2つのペインでそれぞれタブを表示できます。アプリケーションを再起動すると反映されます。" />

                    <TextBlock
                        Margin="0,24,0,0"
                        FontSize="20"
                        FontWeight="Medium"
                        Text="About FastExplorer" />
                    <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</ui:FluentWindow>
