<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    
    <!-- ダークモード時にFluentIconスタイルの色を白に設定 -->
    <Style x:Key="FluentIcon" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="Foreground" Value="{DynamicResource IconBrush}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    
    <!-- SVGアイコンの色（ダークモード） -->
    <SolidColorBrush x:Key="IconBrush" Color="#FFFFFF" />
    
    <!-- テキスト色（ダークモード） -->
    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#CCCCCC" />
</ResourceDictionary>

